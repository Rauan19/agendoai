
# Configuração para desenvolvimento local
# Copie este arquivo para .env.local e preencha as variáveis

# Configuração básica
NODE_ENV=development
SESSION_SECRET=seu-secret-super-seguro-aqui-para-local

# Banco de dados local
# Opção 1: SQLite (mais simples para desenvolvimento)
LOCAL_DATABASE_URL=file:./local.db

# Opção 2: PostgreSQL local (se você tiver instalado)
# LOCAL_DATABASE_URL=postgresql://username:password@localhost:5432/agendoai_local

# Configurações de pagamento (chaves de teste)
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_sua_chave_publica_teste
STRIPE_TEST_SECRET_KEY=sk_test_sua_chave_secreta_teste
STRIPE_TEST_WEBHOOK_SECRET=whsec_sua_chave_webhook_teste

# Email (opcional para desenvolvimento)
SENDGRID_API_KEY=SG.sua_chave_sendgrid
FROM_EMAIL=seu-email@teste.com

# IA (opcional)
ANTHROPIC_API_KEY=sk-ant-sua_chave_anthropic

# WhatsApp (opcional)
WHATSAPP_API_URL=http://localhost:8080
WHATSAPP_TOKEN=seu_token_whatsapp

# Notificações Push (opcional)
VAPID_PUBLIC_KEY=sua_vapid_public_key
VAPID_PRIVATE_KEY=sua_vapid_private_key
VAPID_EMAIL=mailto:seu-email@teste.com

# URLs locais (geralmente não precisam ser alteradas)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000
