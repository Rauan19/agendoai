# ===== BANCO DE DADOS POSTGRESQL =====
# String de conexão completa do PostgreSQL
# Para NeonDB (Recomendado): postgresql://user:password@host/database?sslmode=require
# Para PostgreSQL Local: postgresql://username:password@localhost:5432/agendoai
DATABASE_URL=postgresql://user:password@localhost:5432/agendoai

# Configurações PostgreSQL individuais (opcional, usado quando DATABASE_URL não estiver disponível)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=agendoai

# ===== SERVIDOR =====
PORT=5000
NODE_ENV=development

# ===== SEGURANÇA =====
# Chave secreta para JWT (OBRIGATÓRIO)
# Gere uma nova: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters

# ===== CORS =====
# URLs permitidas para CORS (separadas por vírgula)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===== UPLOAD DE ARQUIVOS =====
# Diretório para uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# ===== APIS OPCIONAIS =====
# Stripe para pagamentos (opcional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Anthropic para IA (opcional)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# SendGrid para emails (opcional)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@agendoai.com

# ===== NOTIFICAÇÕES PUSH (OPCIONAL) =====
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:your-email@example.com

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== LOGS =====
LOG_LEVEL=info
LOG_FILE=./logs/app.log