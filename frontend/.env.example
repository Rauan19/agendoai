# ===== CONFIGURAÇÃO DO FRONTEND =====
# URL base da API do backend
VITE_API_BASE_URL=http://localhost:5000

# Nome da aplicação
VITE_APP_NAME=AgendoAI

# Versão da aplicação
VITE_APP_VERSION=1.0.0

# Ambiente de desenvolvimento
VITE_NODE_ENV=development

# ===== APIS EXTERNAS (OPCIONAIS) =====
# Stripe para pagamentos (chave pública)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Google Maps (se usar mapas)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===== CONFIGURAÇÕES DE URL =====
# URL para redirecionamento após login/logout
VITE_REDIRECT_URL=http://localhost:3000

# ===== CONFIGURAÇÕES DE UPLOAD =====
# Tamanho máximo de arquivo em MB
VITE_MAX_FILE_SIZE=5

# Tipos de arquivo permitidos para upload
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===== CONFIGURAÇÕES DE NOTIFICAÇÃO =====
# Chave pública VAPID para notificações push (deve corresponder ao backend)
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key

# ===== ANALYTICS E MONITORAMENTO (OPCIONAIS) =====
# Google Analytics
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Sentry para monitoramento de erros
VITE_SENTRY_DSN=your_sentry_dsn

# ===== CONFIGURAÇÕES DE DESENVOLVIMENTO =====
# Debug mode (true/false)
VITE_DEBUG_MODE=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# ===== RECURSOS EXPERIMENTAIS =====
# Habilitar funcionalidades beta
VITE_ENABLE_BETA_FEATURES=false

# PWA (Progressive Web App)
VITE_ENABLE_PWA=true